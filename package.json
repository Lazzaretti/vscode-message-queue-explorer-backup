{
	"name": "message-queue-explorer",
	"displayName": "Message Queue Explorer",
	"description": "Tool to view and interact with message queues.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.69.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:message-queue-explorer.queueTreeView",
		"onCommand:message-queue-explorer.helloWorld"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "message-queue-explorer.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "message-queue-explorer.queueTreeView.addEntry",
				"title": "Add Connection"
			},
			{
				"command": "message-queue-explorer.queueTreeView.refresh",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "message-queue-explorer",
					"title": "Message Queue Explorer",
					"icon": "resources/MQ.svg"
				}
			]
		},
		"views": {
			"message-queue-explorer": [
				{
					"type": "tree",
					"id": "message-queue-explorer.queueTreeView",
					"name": "Message Queue Explorer"
				},
				{
					"type": "webview",
					"id": "message-queue-explorer.explorView",
					"name": "Message Queue Explorer Detail",
					"when": "0 == 1"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "message-queue-explorer",
				"contents": "No connections found.\n[Add Connection](command:message-queue-explorer.queueTreeView.addEntry)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "message-queue-explorer.queueTreeView.addEntry",
					"when": "view == message-queue-explorer.queueTreeView"
				},
				{
					"command": "message-queue-explorer.queueTreeView.refresh",
					"when": "view == message-queue-explorer.queueTreeView",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.69.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"eslint": "^8.18.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.4",
		"ts-loader": "^9.3.1",
		"webpack": "^5.73.0",
		"webpack-cli": "^4.10.0",
		"@vscode/test-electron": "^2.1.5"
	}
}